# ========================================
# LLeX.Ai Backend Environment Variables
# ========================================
# 이 파일을 .env로 복사한 후 실제 값을 입력하세요
# cp .env.example .env

# ─────────────────────────────
# 🤖 OpenAI API
# ─────────────────────────────
OPENAI_API_KEY=sk-...
OPENAI_PROJECT_ID=proj_...

# ─────────────────────────────
# 🗄️ PostgreSQL Database
# ─────────────────────────────
DB_NAME=llex
DB_USER=daniel
DB_PASS=your_secure_password_here
DB_HOST=postgres  # Docker: postgres, Local: localhost
DB_PORT=5432

# ─────────────────────────────
# 🧠 Qdrant Vector Database
# ─────────────────────────────
QDRANT_HOST=qdrant  # Docker: qdrant, Local: localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=laws

# ─────────────────────────────
# 🔎 External Search APIs (Optional)
# ─────────────────────────────
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# ─────────────────────────────
# ⚖️ Korean Law API
# ─────────────────────────────
LAW_OC_ID=drsgh1

# ─────────────────────────────
# ⚙️ Feature Flags
# ─────────────────────────────
ENABLE_LAW_FALLBACK=true
